Config
  { font = "JetBrainsMono Nerd Font 14"
  , additionalFonts =
      [ "Font Awesome 6 Free Solid 14"
      , "Noto Sans Mono 14"
      ]
  , bgColor = "#1e1e2e"  -- solid dark for now (no transparency yet)
  , fgColor = "#cdd6f4"
  , position = Top
  , border = NoBorder
  , lowerOnStart = True
  , hideOnStart = False
  , persistent = True
  , allDesktops = True

  , commands =
      [ Run StdinReader
      , Run Cpu
          [ "-t", "CPU: <total>%"
          , "-L", "20"
          , "-H", "75"
          , "--low", "#a6e3a1"
          , "--normal", "#f9e2af"
          , "--high", "#f38ba8"
          ] 10
      , Run Memory
          [ "-t", "RAM: <used>M (<usedratio>%)" ] 10
      , Run Date "%A %d %B %H:%M" "date" 10
      , Run Weather "EGLL"
          [ "-t", "<skyCondition> <tempC>C"
          , "-L", "10"
          , "-H", "30"
          , "--low", "#89b4fa"
          , "--normal", "#a6e3a1"
          , "--high", "#f38ba8"
          ] 36000
      ]

  , sepChar = "%"
  , alignSep = "}{"

  , template = "%StdinReader% }{ \
               \ <fc=#fab387>‚òÅ</fc> %EGLL% | \
               \ <fc=#cba6f7>Ôãõ</fc> %cpu% | \
               \ <fc=#94e2d5>üß†</fc> %memory% | \
               \ <fc=#89b4fa>%date%</fc>"
  }



