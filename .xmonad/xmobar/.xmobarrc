Config
  { font = "JetBrainsMono Nerd Font 14"
  , additionalFonts =
      [ "Noto Sans Mono 14"
      , "Font Awesome 6 Free Solid 14"
      ]
  , bgColor = "#1e1e2e"
  , fgColor = "#cdd6f4"
  , alpha  = 255              -- zet bv. 230 als je lichte transparantie wil
  , position = Top            -- TopSize C 100 28 is ook prima als je vaste hoogte wil
  , border = NoBorder
  , lowerOnStart = True
  , hideOnStart = False
  , persistent = True
  , allDesktops = True        -- laat docks/struts op alle desktops gelden
  , overrideRedirect = True   -- voorkom window-manager borders/shadows

  , commands =
      [ Run StdinReader

      -- Basis-system info (stabiel op elke machine)
      , Run Cpu    [ "--template", "<total>%"
                   , "--Low", "20", "--High", "80"
                   , "--low", "#a6e3a1", "--normal", "#89b4fa", "--high", "#f38ba8"
                   ] 20
      , Run Memory [ "--template", "<usedratio>%"
                   , "--Low", "20", "--High", "90"
                   , "--low", "#a6e3a1", "--normal", "#89b4fa", "--high", "#f38ba8"
                   ] 20
      , Run Date "%a %d %b %H:%M" "date" 60

      -- Optioneel (laat staan of verwijder; werkt ook zonder):
      -- , Run Weather "EGLL" ["--template","<tempC>Â°C"] 36000
      -- , Run BatteryP ["BAT0"]
      --     [ "--template", "<acstatus> <left>%"
      --     , "--Low","15","--High","80"
      --     , "--low","#f38ba8","--normal","#89b4fa","--high","#a6e3a1"
      --     ] 50
      ]

  , sepChar = "%"
  , alignSep = "}{"

  -- Links = XMonad (workspaces | layout | title) via StdinReader
  -- Rechts = systeemsensoren (cpu | mem | tijd)
  , template = "%StdinReader% }{ \
               \ <fc=#cba6f7>ï‹›</fc> %cpu% | \
               \ <fc=#94e2d5>ðŸ§ </fc> %memory% | \
               \ <fc=#89b4fa>%date%</fc>"
  }

